---
interface Props {
    driver: string
}
const { driver } = Astro.props
---

<div>
    <img src={`/drivers/${driver}.avif`} alt=`Driver ${driver}` loading="lazy">
</div> 

<style>
    div:first-child {
        background-color: darkgoldenrod;
    }
    div:nth-child(2) {
        background-color: rgb(0 188 212 / 11%);
    }
    div:hover {
        transform: scale(1.2);
        transition: 0.3s;
    }
    div {
        width: 64px;
        height: 64px;
        background-color: rgba(84, 82, 85, 0.993);
        border-radius: 10px;
        border: solid 1px #ffffff17;
    }
</style>