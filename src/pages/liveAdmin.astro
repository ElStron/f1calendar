---
import Layout from '@layouts/Layout.astro';
import SockAdmin from '@components/SockAdmin.astro';
const metaTags = {
	title: "Positions on live",
	description : "live"
}

const { title, description } = metaTags
---

<Layout title={title} description={description}>
  <h1>Live</h1>
  <form action="">
      <input type="text" name="point" id="add">
      <input type="submit" value="Add">
  </form>
  <table>
      <thead>
        <tr>
          <th>Posición</th>
          <th>Corredor</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <tr class="fila">
          <td class="posicion">1</td>
          <td class="racer">Oscar P</td>
          <td>
            <button class="boton-subir">Subir</button>
            <button class="boton-bajar">Bajar</button>
          </td>
        </tr>
        <tr class="fila">
          <td class="posicion">2</td>
          <td class="racer" >Max V</td>
          <td>
            <button class="boton-subir">Subir</button>
            <button class="boton-bajar">Bajar</button>
          </td>
        </tr>
        <tr class="fila">
          <td class="posicion">3</td>
          <td class="racer">Checo P</td>
          <td>
            <button class="boton-subir">Subir</button>
            <button class="boton-bajar">Bajar</button>
          </td>
        </tr>
        <tr class="fila">
          <td class="posicion">4</td>
          <td class="racer">Riober S</td>
          <td>
            <button class="boton-subir">Subir</button>
            <button class="boton-bajar">Bajar</button>
          </td>
        </tr>
        <!-- Agrega más filas según sea necesario -->
      </tbody>
  </table>
  <div class="crono">

  </div>
</Layout>
<SockAdmin />

<style>
    .crono {
        display: grid;
        grid-row-gap: 20px;
        margin-top: 39px;
    }
</style>