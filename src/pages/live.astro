---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Sock from '../components/Sock.astro';
---

<Layout title="Live race">
    <main>
        <h1>Live</h1>
        <table>
            <thead>
              <tr>
                <th>Posición</th>
                <th>Corredor</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <tr class="fila">
                <td class="posicion">1</td>
                <td class="racer">Oscar P</td>
              </tr>
              <tr class="fila">
                <td class="posicion">2</td>
                <td class="racer" >Max V</td>
              </tr>
              <tr class="fila">
                <td class="posicion">3</td>
                <td class="racer">Checo P</td>
              </tr>
              <tr class="fila">
                <td class="posicion">4</td>
                <td class="racer">Riober S</td>
              </tr>
              <!-- Agrega más filas según sea necesario -->
            </tbody>
          </table>
          <div class="crono">

          </div>
    </main>
</Layout>
<Sock />

<style>
    .crono {
        display: grid;
        grid-row-gap: 20px;
        margin-top: 39px;
    }
</style>