---
import Layout from '../layouts/Layout.astro';
import ScheduleCard from '../components/ScheduleCard.astro';
import DescriptionCard from '../components/DescriptionCard.astro';
import Calendar from '../../db/calendar/2024.json';
import Button from '../components/Button.astro';


const metaTags = {
	title: "Formula 1 Calendar 2024 - F1calendar.live",
	description : "Formula 1 Calendar 2024, news and more.",
	season: "2024"
}
//console.log(Calendar)
const { title, description, season } = metaTags
---

<Layout title={title}, description={description}>
	<main>
		<section class="schedule">
			<DescriptionCard title={"F1 Calendar 2024"} decription={`
			All the latest news and updates from Formula 1 season 2024. And tabla of positions on live. Results and more.`}>
				<Button href='/2023'> ðŸ¡¨ Previus season</Button>
			</DescriptionCard>

			{
				Calendar.schedule.map((schedule) => {
					const href = schedule.place.trim().replace(/\s+/g, '-').toLowerCase()
					return <ScheduleCard {...schedule} href={`${season}/${href}`}/>
				})
			}

		</section> 
	</main>
</Layout>

<style>
	main {
		padding: 1rem;
		font-size: 20px;
		line-height: 1.6;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	
	
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}

</style>
